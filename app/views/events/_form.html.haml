.index1
  = form_for @event do |f|
    - if @event.errors.any?
      #error_explanation
        %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
        %ul
          - @event.errors.full_messages.each do |message|
            %li= message

    .field8
      = f.label :受診または処方希望を入力したください。
      = f.text_field :title
    .field81
      = f.label :体調などを入力してください
      = f.text_area :description
    .field82
      = f.label :希望日と時間を入力してください
      = f.datetime_select :start_date

    .actions84
      = f.submit '予約'
